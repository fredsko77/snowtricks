{% extends 'base.html.twig' %}

{% block title %}
	Liste des tricks
{% endblock %}

{% block content %}
	<h1>Liste des tricks</h1>

	<table class="table table-hovered table-bordered">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom</th>
				<th>Slug</th>
				<th>Crée le</th>
				<th>Mis à jour</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for trick in tricks %}
				<tr>
					<td>{{ trick.id }}</td>
					<td>{{ trick.name }}</td>
					<td>{{ trick.slug }}</td>
					<td>{{ trick.createdAt ? trick.createdAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ trick.updatedAt ? trick.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>
						<a href="{{ path('trick_show', {'id': trick.id, 'slug': trick.slug}) }}">afficher</a>
						<a href="{{ path('trick_edit', {'id': trick.id}) }}">modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="7">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('trick_new') }}">Créer nouveau</a>
{% endblock %}
