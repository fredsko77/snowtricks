{% extends 'base.html.twig' %}

{% block title %}Modifier votre mot de passe
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('assets/css/form.css') }}">
{% endblock %}

{% block content %}
	<h1 class="text-center mb-3">Connexion</h1>
	<form action="{{ path('api_user_change_password', {token:token}) }}" method="post" id="auth-form" onsubmit="handleForm(this,event);">
		<div class="form-group">
			<label for="password">Password</label>
			<input type="password" name="password" id="password" class="form-control" required autofocus>
		</div>
		<div class="form-group">
			<label for="passwordConfirm">Confirmer votre mot de passe</label>
			<input type="password" name="passwordConfirm" id="passwordConfirm" class="form-control" required>
		</div>

		<input type="hidden" name="token" value="{{ token }}">

		<button class="btn btn btn-primary" type="submit">
			Envoyer
		</button>
	</form>
{% endblock %}

{% block javascripts %}
	<!-- Axios Ajax library Js File -->
	<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
	<script src="{{ asset('assets/js/form.js') }}"></script>
	<script src="{{ asset('assets/js/ajax.js') }}"></script>
{% endblock %}
